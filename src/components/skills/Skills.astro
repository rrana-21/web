---
import Title from '../atoms/Title.astro';
import './skills.css';
---

<section id="skills">
	<div class="skills-container">
		<Title contenido="Skills & Expertise" />
		<div class="skills-list">
			<div class="skill-card">
				<div class="skill-icon">
					<iconify-icon icon="mdi:robot-outline" width="32" height="32"></iconify-icon>
				</div>
				<h3>Machine Learning & Deep Learning Model Development</h3>
			</div>

			<div class="skill-card">
				<div class="skill-icon">
					<iconify-icon icon="mdi:chart-box-outline" width="32" height="32"></iconify-icon>
				</div>
				<h3>Deterministic Optimization</h3>
			</div>

			<div class="skill-card">
				<div class="skill-icon">
					<iconify-icon icon="mdi:text-recognition" width="32" height="32"></iconify-icon>
				</div>
				<h3>Natural Language Processing (NLP)</h3>
			</div>

			<div class="skill-card">
				<div class="skill-icon">
					<iconify-icon icon="mdi:chart-line" width="32" height="32"></iconify-icon>
				</div>
				<h3>Data Visualization & Reporting</h3>
			</div>

			<div class="skill-card">
				<div class="skill-icon">
					<iconify-icon icon="mdi:chart-timeline-variant" width="32" height="32"></iconify-icon>
				</div>
				<h3>Time Series Forecasting</h3>
			</div>

			<div class="skill-card">
				<div class="skill-icon">
					<iconify-icon icon="mdi:lightbulb-on-outline" width="32" height="32"></iconify-icon>
				</div>
				<h3>Strategic Insights & Decision Support</h3>
			</div>
		</div>
	</div>
</section>